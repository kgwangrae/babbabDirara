<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle" >true</item>
        <item name="android:statusBarColor" >@color/transparent</item>
        <item name="colorPrimary" >@color/color_primary_lunch</item>
        <item name="colorPrimaryDark" >@color/color_primary_dark_lunch</item>
        <item name="colorAccent" >@color/color_primary_dark_lunch</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" ></style>

    <style name="AppSubTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowNoTitle" >true</item>
        <item name="android:statusBarColor" >@color/color_primary_dark_lunch</item>
        <item name="colorPrimary" >@color/color_primary_lunch</item>
        <item name="colorPrimaryDark" >@color/color_primary_dark_lunch</item>
        <item name="colorAccent" >@color/color_primary_lunch</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow" >
        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
    </style>

</resources>
