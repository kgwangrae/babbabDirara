<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <TextView
        android:id="@+id/breakfastcheck_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:text="@string/breakfast_check_dialog_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color_lunch" />

    <TextView
        android:id="@+id/breakfastcheck_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/breakfast_check_dialog_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/main_color_lunch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/breakfastcheck_dialog_positive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_pressed"
            android:text="@string/breakfast_check_dialog_yes" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/breakfastcheck_dialog_negative_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_pressed"
            android:text="@string/breakfast_check_dialog_no" />

    </LinearLayout>

</LinearLayout>