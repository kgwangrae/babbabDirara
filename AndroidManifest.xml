<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wafflestudio.siksha"
    android:versionCode="6"
    android:versionName="1.1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <!-- Permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeveloperActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppSubTheme"></activity>

        <activity
            android:name=".AppVersionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppSubTheme"></activity>

        <activity
            android:name=".widget.WidgetProviderConfigureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSubTheme">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver android:name=".widget.WidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.wafflestudio.siksha.CONFIGURATION_FINISHED" />
                <action android:name="com.wafflestudio.siksha.DATA_FETCHED" />
                <action android:name="com.wafflestudio.siksha.WIDGET_REFRESH" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider_info" />
        </receiver>

        <receiver android:name=".service.AlarmServiceReceiver"></receiver>

        <receiver android:name=".service.BootServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".service.DownloadingJson" />

        <service
            android:name=".widget.WidgetRemoteService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

    </application>

</manifest>
